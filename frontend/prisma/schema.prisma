generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password_hash String    @db.VarChar(60)
  created_at    DateTime? @default(now())
  updated_at    DateTime? @updatedAt
  max_sites     Int?      @default(1) // Can increase on premium users.
  site          Site[]
  session       Session[]
}

model Session {
  id         String   @id
  user_id    Int
  expires_at DateTime
  user       User     @relation(references: [id], fields: [user_id], onDelete: Cascade, onUpdate: Cascade)
}

model Site {
  id                 Int               @id @default(autoincrement())
  name               String            @unique @db.VarChar(80)
  user_id            Int
  created_at         DateTime?         @default(now())
  updated_at         DateTime?         @updatedAt
  favicon_url        String?
  max_urls_allowed   Int               @default(15) // Can increase
  user               User              @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  site_added_sources SiteAddedSource[]
}

model SiteAddedSource {
  id          Int       @id @default(autoincrement())
  site_id     Int
  source      String    @unique @db.VarChar(80)
  source_type String    @db.VarChar(80)
  type        String?   @db.VarChar(80)
  created_at  DateTime? @default(now())
  updated_at  DateTime? @updatedAt
  site        Site      @relation(fields: [site_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
